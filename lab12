    private void btnSubmitActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        try
        {
        String fname=txtFname.getText();
        String mname=txtMname.getText();
        String lname=txtLname.getText();
        String fathername=txtFather.getText();
        String mothername=txtMother.getText();
        String gender="";
        if( rdMale.isSelected())
        {
       gender="Male";
        }
        else if(rdFemale.isSelected())
        {
            gender="Female";
        }
        else if(rdOthers.isSelected())
                {
                    gender="Others";
                }
        String City=cmCity.getSelectedItem().toString();
        String Id_Proof=cmID.getSelectedItem().toString();
        String dno= txtDno.getText();
        String mobile_no=txtMno.getText();
        String email_id=txtEmail.getText();
        String address=txtAddress.getText();
        String pincode=txtPincode.getText();
        String amount=txtAmount.getText();
        
        Class.forName("com.mysql.jdbc.Driver");
            Connection con=DriverManager.getConnection("jdbc:mysql://localhost:3306/bank","root","");
            Statement stmt=con.createStatement(); 
            int i=stmt.executeUpdate("insert into customer (First_Name,Middle_Name,Last_name,Fathers_Name,Mothers_Name,Gender,City,Id_Proof,Document_No,Mobile_No,Email_Id,Address,Pincode,Amount) values('"+fname+"','"+mname+"','"+lname+"','"+fathername+"','"+mothername+"','"+gender+"','"+City+"','"+Id_Proof+"','"+dno+"','"+mobile_no+"','"+email_id+"','"+address+"','"+pincode+"','"+amount+"')");
 if(i>0)
 {
     JOptionPane.showMessageDialog(null,"Customer bank account is created successfully");
     retriveAc();
     
 }
 else
{
    JOptionPane.showMessageDialog(null,"Error");
}
        }
        catch(Exception e)
        {
            JOptionPane.showMessageDialog(null," Error:"+e);
        
        }
       
    }                                         

